<h2>Edit Movie</h2>

<br>
<br>

<form action="/movies/{{movie._id}}/edit" method="POST">
    <div>
        <label for="" class="form-label">Title </label> <br>
        <input type="text" name="title" value="{{movie.title}}">
    </div>
    <div>
        <br>

        <label for="" class="form-label">Genre </label> <br>
        <input type="text" name="genre" value="{{movie.genre}}">
    </div>
    <br>
    <div>
        <label for="" class="form-label">Plot </label> <br>
        <input type="text" name="plot" value="{{movie.plot}}"> </input>
    </div>
    <div>
        <br>

        <label for="" class="form-label">cast </label> <br>
        <select type="text" name="cast" id="cast" multiple>
            {{#each celebrities}}
            <option value="{{_id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <button type="submit">Save changes</button>
    </div>
</form>