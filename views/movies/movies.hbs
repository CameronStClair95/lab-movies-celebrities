<br>

<h1>Movies</h1>



<div>
    {{#each result}}
    <div>
        <h2>{{title}}</h2>
        <br>
        <a href="/movies/{{_id}}">Link to Movie page</a>
        <h2>{{genre}}</h2>
        <h2>{{plot}}</h2>
        <div>
            <ul>
                {{#each cast}}
                <li>{{this.name}}</li>
                {{/each}}
            </ul>
        </div>
        <a href="/movies/{{_id}}/edit">Edit this Movie</a>
    </div>
    <form action="/movies/{{_id}}/delete" method="POST">
        <button type="submit"> Delete this Movie</button>
    </form>
    {{/each}}
</div>